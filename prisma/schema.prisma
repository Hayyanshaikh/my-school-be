generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Gender {
  MALE
  FEMALE
  OTHERS
}

model Student {
  id            String    @id @default(uuid())
  name          String    @unique
  age           Int
  birthDate     DateTime?
  gender        Gender
  classId       String
  sectionId     String
  admissionDate DateTime
  rollNo        Int       @unique
  fatherName    String?
  motherName    String?
  phone         String?
  email         String?   @unique
  address       String?
  isActive      Boolean   @default(true)
  section       Section   @relation(fields: [sectionId], references: [id])
  class         Class     @relation(fields: [classId], references: [id])
}

model Class {
  id            String    @id @default(uuid())
  name          String    @unique
  teacher       String
  roomNo        String?
  totalStudents Int?
  isActive      Boolean   @default(true)
  students      Student[]
  sections      Section[]
}

model Section {
  id       String    @id @default(uuid())
  name     String    @unique
  classId  String
  isActive Boolean   @default(true)
  students Student[]
  class    Class     @relation(fields: [classId], references: [id])
}
